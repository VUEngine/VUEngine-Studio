{%- macro instrumentIsUsed(instrumentId) -%}
	{%- set result = false -%}
	{%- for track in item.tracks -%}
		{%- if track.sequence | length and not track.instrument == '' and not (isSoundEditorPreview and (trackSettings[loop.index0].muted or (soloTrack > -1 and soloTrack !== loop.index0))) -%}
			{%- if track.instrument == instrumentId -%}
				{%- set result = true -%}
			{%- endif -%}
			{%- for patternId in track.sequence | values -%}
				{%- set pattern = item.patterns[patternId] -%}
				{%- if pattern is defined and pattern.events | length -%}
					{%- for step in pattern.events | values -%}
						{%- if step.instrument is defined and step.instrument == instrumentId -%}
							{%- set result = true -%}
						{%- endif -%}
					{%- endfor -%}
				{%- endif -%}
			{%- endfor -%}
		{%- endif -%}
	{%- endfor -%}
	{{ result }}
{%- endmacro -%}

{%- macro printValueList(values, columnWidth, valueWhenEmpty) -%}
	{% set count = 0 -%}
	{%- if values | length == 0-%}
		{{- valueWhenEmpty -}}
	{%- else -%}
		{%- for value in values -%}
			{{- value | safe -}}{{- ', ' -}}
			{% set count = count + 1 -%}
			{%- if count == columnWidth and not loop.last -%}
				{{- '\n\t' -}}
				{% set count = 0 -%}
			{%- endif -%}
		{%- endfor %}
	{%- endif -%}
{%- endmacro -%}

