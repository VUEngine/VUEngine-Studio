{
  "private": true,
  "name": "vuengine-studio",
  "description": "Nintendo Virtual Boy game development application",
  "productName": "VUEngine Studio",
  "version": "0.5.0",
  "main": "scripts/ves-electron-main.js",
  "license": "MIT",
  "author": "KR155E <c.radke@posteo.de>",
  "homepage": "https://www.vuengine.dev",
  "bugs": {
    "url": "https://github.com/VUEngine/VUEngine-Studio/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VUEngine/VUEngine-Studio.git"
  },
  "engines": {
    "yarn": ">=1.7.0 <2",
    "node": ">=12.14.1"
  },
  "theia": {
    "target": "electron",
    "frontend": {
      "config": {
        "applicationName": "VUEngine Studio",
        "defaultTheme": "Dark",
        "defaultIconTheme": "vuengine-studio-file-icons",
        "reloadOnReconnect": true,
        "preferences": {
          "files.autoSave": "onFocusChange",
          "workbench.tree.renderIndentGuides": "none",
          "editor.detectIndentation": false,
          "editor.insertSpaces": false,
          "files.exclude": {
            "**/.git": true,
            "**/.svn": true,
            "**/.hg": true,
            "**/CVS": true,
            "**/.DS_Store": true,
            "**/build": true
          },
          "files.watcherExclude": {
            "**/.git/objects/**": true,
            "**/.git/subtree-cache/**": true,
            "**/node_modules/**": true,
            "**/.hg/store/**": true,
            "**/build/*/**": true,
            "**/build/*.a": true,
            "**/build/*.map": true
          },
          "git.autofetch": true,
          "security.workspace.trust.enabled": false,
          "toolbar.showToolbar": true,
          "window.title": "${projectName}",
          "workspace.preserveWindow": true
        },
        "electron": {
          "showWindowEarly": false,
          "splashScreenOptions": {
            "content": "resources/splash/index.html",
            "height": 320,
            "width": 320
          }
        }
      }
    },
    "backend": {
      "config": {
        "frontendConnectionTimeout": -1,
        "resolveSystemPlugins": false,
        "startupTimeout": -1
      }
    }
  },
  "dependencies": {
    "@theia/bulk-edit": "1.50.1",
    "@theia/console": "1.50.1",
    "@theia/core": "1.50.1",
    "@theia/debug": "1.50.1",
    "@theia/editor-preview": "1.50.1",
    "@theia/editor": "1.50.1",
    "@theia/electron": "1.50.1",
    "@theia/external-terminal": "1.50.1",
    "@theia/file-search": "1.50.1",
    "@theia/filesystem": "1.50.1",
    "@theia/keymaps": "1.50.1",
    "@theia/markers": "1.50.1",
    "@theia/messages": "1.50.1",
    "@theia/metrics": "1.50.1",
    "@theia/monaco": "1.50.1",
    "@theia/navigator": "1.50.1",
    "@theia/notebook": "1.50.1",
    "@theia/output": "1.50.1",
    "@theia/plugin-ext": "1.50.1",
    "@theia/plugin-ext-vscode": "1.50.1",
    "@theia/preferences": "1.50.1",
    "@theia/preview": "1.50.1",
    "@theia/process": "1.50.1",
    "@theia/property-view": "1.50.1",
    "@theia/scm-extra": "1.50.1",
    "@theia/scm": "1.50.1",
    "@theia/search-in-workspace": "1.50.1",
    "@theia/secondary-window": "1.50.1",
    "@theia/task": "1.50.1",
    "@theia/terminal": "1.50.1",
    "@theia/timeline": "1.50.1",
    "@theia/toolbar": "1.50.1",
    "@theia/userstorage": "1.50.1",
    "@theia/variable-resolver": "1.50.1",
    "@theia/vsx-registry": "1.50.1",
    "@theia/workspace": "1.50.1",
    "fs-extra": "^9.0.1",
    "vuengine-studio-extension": "1.0.0"
  },
  "devDependencies": {
    "@theia/cli": "1.50.1",
    "@types/js-yaml": "^3.12.0",
    "@types/yargs": "17.0.7",
    "@wdio/cli": "^6.10.2",
    "@wdio/local-runner": "^6.10.2",
    "@wdio/mocha-framework": "^6.8.0",
    "@wdio/spec-reporter": "^6.8.1",
    "app-builder-lib": "22.10.5",
    "chai": "^4.3.10",
    "concurrently": "^3.5.0",
    "electron": "^28.2.8",
    "electron-builder": "23.6.0",
    "electron-chromedriver": "^28.2.8",
    "electron-mocha": "^12.3.0",
    "js-yaml": "^3.12.0",
    "mocha": "^8.2.1",
    "rimraf": "^2.7.1",
    "ts-node": "^10.0.0",
    "wdio-chromedriver-service": "^6.0.4",
    "webdriverio": "^6.10.2",
    "yargs": "17.2.1"
  },
  "scripts": {
    "clean": "theia clean && rimraf node_modules",
    "clean:dist": "rimraf dist",
    "build": "yarn -s rebuild && theia build --app-target=\"electron\" --mode development",
    "build:prod": "yarn -s rebuild && theia build --app-target=\"electron\"",
    "rebuild": "theia rebuild:electron --cacheRoot .",
    "watch": "concurrently -n compile,build \"theiaext watch --preserveWatchOutput\" \"theia build --watch --mode development\"",
    "start": "electron scripts/ves-electron-main.js --plugins=local-dir:../../plugins",
    "start:debug": "yarn start --log-level=debug",
    "package": "yarn clean:dist && yarn rebuild && electron-builder -c.mac.identity=null --publish never",
    "package:prod": "yarn deploy",
    "deploy": "yarn clean:dist && yarn rebuild && electron-builder -c.mac.identity=null --publish always",
    "package:preview": "yarn clean:dist && yarn rebuild && electron-builder -c.mac.identity=null --dir",
    "update:checksum": "ts-node scripts/update-checksum.ts",
    "update:blockmap": "ts-node scripts/update-blockmap.ts",
    "update:next": "ts-node ../../scripts/update-theia-to-next.ts",
    "test": "mocha --timeout 60000 \"./test/*.spec.js\""
  }
}
