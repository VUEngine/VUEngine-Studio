{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "@typescript-eslint/tslint", "import"],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "ignorePatterns": ["node_modules", "lib"]
}
