{
  "private": true,
  "name": "vuengine-projects",
  "displayName": "VUEngine Projects",
  "description": "Projects registry, browser and creation for VUEngine Studio",
  "version": "1.0.0",
  "publisher": "vuengine",
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vuengine.projects.create",
        "title": "Create new project",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/new-folder.svg",
          "light": "img/icon/light/new-folder.svg"
        }
      },
      {
        "command": "vuengine.projects.listToOpen",
        "title": "Open project",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/folder-opened.svg",
          "light": "img/icon/light/folder-opened.svg"
        }
      },
      {
        "command": "vuengine.touchBar.projects.listToOpen",
        "title": "Open project",
        "category": "Projects",
        "icon": "img/icon/touchBar/open-project.png"
      },
      {
        "command": "vuengine.projects.openProject",
        "title": "Open",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/folder-opened.svg",
          "light": "img/icon/light/folder-opened.svg"
        }
      },
      {
        "command": "vuengine.projects.openProjectInNewWindow",
        "title": "Open in new window",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/folder-opened.svg",
          "light": "img/icon/light/folder-opened.svg"
        }
      },
      {
        "command": "vuengine.projects.removeFromRegistry",
        "title": "Remove from registry",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/remove.svg",
          "light": "img/icon/light/remove.svg"
        }
      },
      {
        "command": "vuengine.projects.scanForProjects",
        "title": "Scan projects folder for unregistered projects",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/search.svg",
          "light": "img/icon/light/search.svg"
        }
      },
      {
        "command": "vuengine.projects.clearRegistry",
        "title": "Clear projects registry",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/trash.svg",
          "light": "img/icon/light/trash.svg"
        }
      },
      {
        "command": "vuengine.projects.refresh",
        "title": "Refresh",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/refresh.svg",
          "light": "img/icon/light/refresh.svg"
        }
      },
      {
        "command": "vuengine.projects.rename",
        "title": "Rename registry entry",
        "category": "Projects",
        "icon": {
          "dark": "img/icon/dark/edit.svg",
          "light": "img/icon/light/edit.svg"
        }
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "vuengine.touchBar.projects.listToOpen",
          "group": "navigation@-104"
        }
      ],
      "view/title": [
        {
          "command": "vuengine.projects.refresh",
          "group": "navigation@0",
          "when": "view == vuengine-studio-projects"
        },
        {
          "command": "vuengine.projects.scanForProjects",
          "group": "navigation@1",
          "when": "view == vuengine-studio-projects"
        },
        {
          "command": "vuengine.projects.create",
          "group": "navigation@2",
          "when": "view == vuengine-studio-projects"
        },
        {
          "command": "vuengine.projects.clearRegistry",
          "group": "navigation@3",
          "when": "view == vuengine-studio-projects"
        }
      ],
      "view/item/context": [
        {
          "command": "vuengine.projects.openProject",
          "group": "navigation",
          "when": "view == vuengine-studio-projects && viewItem == project"
        },
        {
          "command": "vuengine.projects.openProjectInNewWindow",
          "group": "navigation",
          "when": "view == vuengine-studio-projects && viewItem == project"
        },
        {
          "command": "vuengine.projects.rename",
          "group": "registry",
          "when": "view == vuengine-studio-projects && viewItem == project"
        },
        {
          "command": "vuengine.projects.rename",
          "group": "registry",
          "when": "view == vuengine-studio-projects && viewItem == currentProject"
        },
        {
          "command": "vuengine.projects.removeFromRegistry",
          "group": "registry",
          "when": "view == vuengine-studio-projects && viewItem == project"
        },
        {
          "command": "vuengine.projects.removeFromRegistry",
          "group": "registry",
          "when": "view == vuengine-studio-projects && viewItem == currentProject"
        }
      ],
      "commandPalette": [
        {
          "command": "vuengine.touchBar.projects.listToOpen",
          "when": "false"
        },
        {
          "command": "vuengine.projects.openProject",
          "when": "false"
        },
        {
          "command": "vuengine.projects.openProjectInNewWindow",
          "when": "false"
        },
        {
          "command": "vuengine.projects.rename",
          "when": "false"
        },
        {
          "command": "vuengine.projects.removeFromRegistry",
          "when": "false"
        },
        {
          "command": "vuengine.projects.refresh",
          "when": "false"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vuengine-studio-projects-bar",
          "title": "Projects",
          "icon": "img/activity-bar-projects.svg"
        }
      ]
    },
    "views": {
      "vuengine-studio-projects-bar": [
        {
          "id": "vuengine-studio-projects",
          "name": ""
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vuengine-studio-projects",
        "contents": "No registered projects found.\nOpen any VUEngine project workspace file for the project to be automatically registered (if the respective setting is not disabled).\nYou can scan for projects to be auto-registered in your projects base folder (modify through the respective setting).\n [Create a new Project](command:vuengine.projects.create)\n[Scan for projects](command:vuengine.projects.scanForProjects)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Projects",
      "properties": {
        "vuengine.projects.path": {
          "type": "string",
          "label": "Projects Path",
          "default": "%HOME%/dev/vb",
          "description": "Full path to folder where to create new projects in"
        },
        "vuengine.projects.autoAddToRegistry": {
          "type": "boolean",
          "label": "Auto Add To Registry",
          "default": true,
          "description": "Automatically add project to registry when loading"
        },
        "vuengine.projects.autoCleanRegistry": {
          "type": "boolean",
          "label": "Auto Clean Registry",
          "default": true,
          "description": "Automatically remove no longer existing projects from registry on start-up"
        },
        "vuengine.projects.makerCode": {
          "type": "string",
          "label": "Maker Code",
          "minLength": 2,
          "maxLength": 2,
          "default": "VU",
          "description": "Maker Code to place in ROM header"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "glob": "^7.1.4",
    "cross-env": "5.0.5"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.32.0",
    "mocha": "^6.1.4",
    "source-map-support": "^0.5.12",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2",
    "vscode-test": "^1.3.0"
  }
}