{
  "private": true,
  "name": "vuengine-build",
  "displayName": "VUEngine Build",
  "description": "VUEngine Build System",
  "version": "1.0.0",
  "publisher": "vuengine",
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vuengine.build",
        "title": "Build project",
        "category": "Build",
        "icon": {
          "dark": "img/icon/dark/console.svg",
          "light": "img/icon/light/console.svg"
        }
      },
      {
        "command": "vuengine.touchBar.build",
        "title": "Build project",
        "category": "Build",
        "icon": "img/icon/touchBar/build.png"
      },
      {
        "command": "vuengine.clean",
        "title": "Clean build folder",
        "category": "Build",
        "icon": {
          "dark": "img/icon/dark/trash.svg",
          "light": "img/icon/light/trash.svg"
        }
      },
      {
        "command": "vuengine.touchBar.clean",
        "title": "Clean build folder",
        "category": "Build",
        "icon": "img/icon/touchBar/clean.png"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "vuengine.touchBar.clean",
          "group": "navigation@-110",
          "when": "isVUEngineProject"
        },
        {
          "command": "vuengine.touchBar.build",
          "group": "navigation@-109",
          "when": "isVUEngineProject"
        }
      ],
      "view/title": [
        {
          "command": "vuengine.clean",
          "group": "navigation",
          "when": "view == explorer"
        },
        {
          "command": "vuengine.build",
          "group": "navigation",
          "when": "view == explorer"
        }
      ],
      "commandPalette": [
        {
          "command": "vuengine.touchBar.build",
          "when": "false"
        },
        {
          "command": "vuengine.touchBar.clean",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vuengine.clean",
        "key": "alt+shift+c"
      },
      {
        "command": "vuengine.build",
        "key": "alt+shift+b"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Plugins",
      "properties": {
        "vuengine.build.enableWsl": {
          "type": "boolean",
          "label": "%package.contributes.configuration.compiler.enableWsl.label%",
          "default": false,
          "description": "%package.contributes.configuration.compiler.enableWsl.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "glob": "^7.1.4"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.32.0",
    "mocha": "^6.1.4",
    "source-map-support": "^0.5.12",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2",
    "vscode-test": "^1.3.0"
  }
}