{
  "private": true,
  "name": "vuengine-flash",
  "displayName": "VUEngine Flash",
  "description": "VUEngine Studio: Support for FlashBoy and HyperFlash flash carts",
  "version": "1.0.0",
  "publisher": "vuengine",
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vuengine.flash",
        "title": "Flash compiled binary to flash cart",
        "category": "Flash",
        "icon": {
          "dark": "img/icon/dark/usb.svg",
          "light": "img/icon/light/usb.svg"
        }
      },
      {
        "command": "vuengine.touchBar.flash",
        "title": "Flash compiled binary to flash cart",
        "category": "Flash",
        "icon": "img/icon/touchBar/flash.png"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "vuengine.touchBar.flash",
          "group": "navigation@-107",
          "when": "isVUEngineProject"
        }
      ],
      "view/title": [
        {
          "command": "vuengine.flash",
          "group": "navigation",
          "when": "view == explorer"
        }
      ],
      "commandPalette": [
        {
          "command": "vuengine.touchBar.flash",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vuengine.flash",
        "key": "alt+shift+f"
      }
    ],
    "configuration": {
      "vuengine.flash.flashCarts": {
        "type": "array",
        "label": "Flash cart configurations",
        "description": "Configurations of known flash carts",
        "items": {
          "type": "object",
          "title": "Flash cart config",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the flash cart configuration"
            },
            "vid": {
              "type": "number",
              "description": "USB vendor ID (VID) of the flash cart",
              "minimum": 0,
              "maximum": 65535
            },
            "pid": {
              "type": "number",
              "description": "USB product ID (PID) of the flash cart",
              "minimum": 0,
              "maximum": 65535
            },
            "deviceName": {
              "type": "string",
              "description": "USB Device Name of the flash cart (optional)"
            },
            "serialNumber": {
              "type": "string",
              "description": "USB Serial Number of the flash cart (optional)"
            },
            "size": {
              "type": "number",
              "description": "Size of flash cart (in Mbit)"
            },
            "path": {
              "type": "string",
              "description": "Full path to flasher software"
            },
            "args": {
              "type": "string",
              "multiline": true,
              "description": "Arguments to pass to flasher software"
            }
          }
        },
        "default": [
          {
            "name": "FlashBoy (Plus)",
            "vid": 6017,
            "pid": 2466,
            "deviceName": "FlashBoy",
            "serialNumber": "",
            "size": 16,
            "path": "%PROG_VB_PATH%",
            "args": "%ROM%"
          },
          {
            "name": "HyperFlash32",
            "vid": 0,
            "pid": 0,
            "deviceName": "",
            "serialNumber": "",
            "size": 32,
            "path": "%HYPERFLASHER_PATH%",
            "args": "%ROM%"
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "glob": "^7.1.4",
    "usb": "^1.6.3",
    "cross-env": "5.0.5"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.32.0",
    "mocha": "^6.1.4",
    "source-map-support": "^0.5.12",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "typescript": "^4.0.2",
    "vscode-test": "^1.3.0"
  }
}